{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3 poster" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <div>
                <p class="remove-margin">Saisons disponibles :</p>
            <ul class="style-list">
                {% for season in program.seasons %}
                <li class="list-seasons">
                    <a href="{{ path("program_season_show", { programSlug: program.slug, seasonId: season.id }) }}">Saison {{ season.number }}</a>
                </li>
                {% endfor %}
            </ul>
            </div>
            <div>
                <strong>Acteurs :</strong>
                <ul>
                    {% for actor in program.actors %}
                        <li>{{ actor.name }} </li>
                    {% else %}
                        <li>Aucun acteur pour cette série</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <a class="link-return" href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}