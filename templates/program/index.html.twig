{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}
        <div>
            <h2 class="margin-top">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p class="remove-margin">{{ program.summary }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a class="link-return" href="{{ path('program_new') }}">
        Ajouter une série
    </a><br>

    <a class="link-return" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
