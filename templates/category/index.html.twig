{% extends 'base.html.twig' %}

{% block title %}All Categories{% endblock %}

{% block body %}
    <h1>Toutes les catégories de la table category : </h1>
    {% for category in categories %}
        <div>
            <ul class="style-list">
                <li>
                    {{ loop.index }} /  <a href="{{ path("category_show", { categoryName: category.name }) }}">{{ category.name }}</a>
                </li>
            </ul>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}
    <div>
        <a class="link-return" href="{{ path('category_new') }}">
            Ajouter une nouvelle catégorie
        </a>
    </div>

    <a class="link-return" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}